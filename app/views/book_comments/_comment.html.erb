<table>
      <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to user_path(book_comment.user) do %>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %><br>
   <%= book_comment.user.name %></td>
   <% end %>
  <td><%= book_comment.comment %></td>
   <% if book_comment.user == current_user %>
  <td>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true, class: "btn btn-sm btn-danger" %>
  </td>
  <% end %>
<% end %>
</tr>

</table>
<%= form_with(model:[book, book_comment], remote: true) do |f| %>
  <%= f.text_area :comment, size:"100x5", rows:'5' %>
  <%= f.submit "送信" %>
<% end %>